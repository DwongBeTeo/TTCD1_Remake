@model IEnumerable<K22CNT2_TDD_2210900097_Remake.Models.TDDCartItem>

@{
    ViewBag.Title = "Thong Tin Gio Hang";
}
<h2>Gio Hang Cua Ban</h2>
@using (Html.BeginForm("UpdateFromCart","TDDCart"))
{
    <div class="row">
        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TenSanPham)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HinhAnh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuongMua)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DonGiaMua)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThanhTien)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    { 
                        <tr>
                            @*<td>
                                <input type="hidden" name="ID" value="@item.ID" />
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSanPham)
                            </td>
                            <td>
                                <img src="@item.HinhAnh" style="width:50px" alt="@item.TenSanPham">
                            </td>
                            <td>
                                <input type="number" name="SoLuongMua" id="SoLuongMua" data-id="@item.ID"
                                       value="@item.SoLuongMua" style="width:50px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DonGiaMua)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThanhTien)
                            </td>
                            <td>
                                @*@Html.ActionLink("Update", "UpDateToCart", new { id = item.ID,qty= item.SoLuongMua }) |*@
                                <a href="/TDDCart/UpdateItemCart?id=@item.ID&qty=@item.SoLuongMua"
                                   class="btn btn-outline-success update my-2">
                                    Update
                                </a>
                                <a href="/TDDCart/DeleteItemCart?id=@item.ID" class="btn btn-outline-danger">
                                    Delete   
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

            <button class="btn btn-primary mx-2">Cap nhat gio hang</button>
            <a href="/TDDCart/ThongTinThanhToan" class=" btn btn-outline-success">ThanhToan</a>
        </div>
    </div>
}
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("input[type='number']").change(function () {
                let id = $(this).attr("data-id");
                let qty = $(this).val();
                //tạo link update
                let url = "/TDDCart/UpdateItemCart?id=" + id + "&qty=" + qty;
                $(this).parent().siblings("td").children("a.update").attr('href', url);
            });
        });
    </script>
    }