@{ 
    var dangNhap = Session["DangNhap"] as K22CNT2_TDD_2210900097_Remake.Models.KHACH_HANG;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -K22CNT2_Trần Đăng </title>
    <link href="~/Content/Style/SlideShowSanPham.css" rel="stylesheet"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("TranDangDuong", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("San Pham", "Index", "TDD_SAN_PHAM", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Gio Hang", "Index", "TDDCart", new { area = "" }, new { @class = "nav-link" })</li>

                </ul>
                <form action="/TDD_SAN_PHAM/Index" class="d-flex" role="search">
                    <input class="form-control me-2" name="Search" id="Search" type="Search" placeholder="Search" aria-label="Search" value="@ViewBag.SAN_PHAM">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
                <div class="d-flex mx-2">
                    @if (Session["DangNhap"] != null)
                    {
                        <a href="#">Welcome, </a>
                        <span class="badge bg-gradient">@dangNhap.HoTenKhachHang</span>
                        <a href="/tdd_khach_hang/dang_xuat" class="btn btn-success">Đăng Xuất</a>
                    }
                    else
                    {
                        <a href="/tdd_khach_hang/dang_ky" class="btn btn-primary mx-1">Đăng Ký</a>
                        <a href="/tdd_khach_hang/dang_nhap" class="btn btn-success">Đăng Nhập</a>
                    }

                </div>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Content/JavaScript/AppIndexSanPham.js"></script> 
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
