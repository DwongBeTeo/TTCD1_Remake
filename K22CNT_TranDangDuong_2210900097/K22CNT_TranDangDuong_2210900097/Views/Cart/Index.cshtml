@model K22CNT_TranDangDuong_2210900097.Bussiness.ShoppingCart

@{
    ViewBag.Title = "Shopping Cart";
}

<h2>Your Shopping Cart</h2>


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Image</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <input type="number" value="@item.Qty" name="qty" />
                    </td>
                    <td>@(item.Qty * item.Price)</td>
                    <td>
                        <a href="javascript:void(0)" onclick="UpdateCartItem()">Cap Nhat</a>
                        @Html.ActionLink("Xóa", "RemoveFromCart", new { productId = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    
    <h3>Tổng Tiền: @Model.GetTotal().ToString("C")</h3> 
    <a href="Cart/ThongTinThanhToan">Thanh Toán </a>

    

